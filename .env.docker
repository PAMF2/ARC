# ============================================================================
# Arc BaaS - Docker Environment Configuration Template
# ============================================================================
# Copy this file to .env and set your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Flask Configuration
# ----------------------------------------------------------------------------
FLASK_ENV=production
FLASK_APP=baas_backend.py
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Service Ports
# ----------------------------------------------------------------------------
BACKEND_PORT=5001
FRONTEND_PORT=5002
POSTGRES_PORT=5432
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_USER=baas_admin
POSTGRES_PASSWORD=change_me_in_production_use_strong_password
POSTGRES_DB=baas_production
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Full database URL (auto-constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=redis
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=0
CACHE_DEFAULT_TIMEOUT=300

# ----------------------------------------------------------------------------
# Circle API (Programmable Wallets)
# ----------------------------------------------------------------------------
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENTITY_SECRET=your_circle_entity_secret_here
CIRCLE_BASE_URL=https://api.circle.com

# ----------------------------------------------------------------------------
# Arc Network (Blockchain)
# ----------------------------------------------------------------------------
ARC_RPC_URL=https://rpc-testnet.arc.xyz
ARC_CHAIN_ID=1302
PRIVATE_KEY=your_ethereum_private_key_here_without_0x_prefix

# ----------------------------------------------------------------------------
# Gemini AI
# ----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
SECRET_KEY=change_me_use_openssl_rand_hex_32
JWT_SECRET_KEY=change_me_use_openssl_rand_hex_64
ALLOWED_ORIGINS=http://localhost:5002,http://localhost:3000

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ----------------------------------------------------------------------------
# Application Performance
# ----------------------------------------------------------------------------
WORKERS=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT=120
GRACEFUL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_BLOCKCHAIN=true
ENABLE_AI_INSIGHTS=true
ENABLE_RISK_MONITORING=true
ENABLE_AAVE_INTEGRATION=false

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------
SENTRY_DSN=
DATADOG_API_KEY=
ENABLE_METRICS=false
METRICS_PORT=9090

# ----------------------------------------------------------------------------
# Development Settings (disable in production)
# ----------------------------------------------------------------------------
DEBUG=false
TESTING=false
DEVELOPMENT=false

# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# Generate strong secrets:
#   SECRET_KEY: openssl rand -hex 32
#   JWT_SECRET_KEY: openssl rand -hex 64
#   POSTGRES_PASSWORD: openssl rand -hex 32
#
# Never commit this file with real secrets!
# Add .env to .gitignore
#
# ============================================================================
